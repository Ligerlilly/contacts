

<h4>Contact Info</h4>
<form id="form_id" action="/contact_form" method="post">
  <div class="form-group">
    <input type="hidden" name="id" value="<%= @contact.id %>">

    <label for="street">Street Address:</label>
    <input type="text" name="street" id="street" class='form-control'>

    <label for="city">City:</label>
    <input type="text" name="city" id="city" class='form-control'>

    <label for="state">State:</label>
    <input type="text" name="state" id="state" class='form-control'>

    <label for="zip">Zip Code:</label>
    <input type="text" name="zip" id="zip" class='form-control'>



    <label for="number">Phone Number:</label>
    <div class="row">
      <div class="md-col-4">
        <input type="text" name="area_code" id="area_code" class="phone"> -
        <input type="text" name="first_half" id="first_half" class="phone"> -
        <input type="text" name="second_half" id="second_half"  class="phone">
      </div>
    </div>



    <label for="email">Email:</label>
    <input type="text" name="email" id="email" class='form-control'>

  </div>
  <button class="btn btn-success" type="submit">Add Info</button>
</form>
